{
  "private": true,
  "name": "web-framework",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "web-framework-build",
    "clean": "del tsconfig.tsbuildinfo \"packages/*/dist\"",
    "create-package": "web-framework-create-package"
  },
  "prettier": {
    "printWidth": 120,
    "trailingComma": "all"
  },
  "eslintConfig": {
    "plugins": [
      "import",
      "react-hooks"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "sourceType": "module"
    },
    "rules": {
      "no-var": "error",
      "import/no-absolute-path": "error",
      "import/no-dynamic-require": "error",
      "import/no-webpack-loader-syntax": "error",
      "import/no-self-import": "error",
      "import/no-useless-path-segments": "error",
      "import/order": [
        "error",
        {
          "alphabetize": {
            "order": "asc"
          }
        }
      ],
      "react-hooks/rules-of-hooks": "error",
      "react-hooks/exhaustive-deps": "warn",
      "padding-line-between-statements": [
        "warn",
        {
          "blankLine": "always",
          "prev": "import",
          "next": "*"
        },
        {
          "blankLine": "any",
          "prev": "import",
          "next": "import"
        },
        {
          "blankLine": "always",
          "prev": "*",
          "next": "export"
        },
        {
          "blankLine": "any",
          "prev": "export",
          "next": "export"
        },
        {
          "blankLine": "always",
          "prev": "*",
          "next": [
            "class",
            "function",
            "block",
            "block-like",
            "multiline-expression",
            "multiline-const",
            "multiline-let"
          ]
        },
        {
          "blankLine": "always",
          "prev": [
            "class",
            "function",
            "block",
            "block-like",
            "multiline-expression",
            "multiline-const",
            "multiline-let"
          ],
          "next": "*"
        }
      ]
    },
    "ignorePatterns": [
      "*.js",
      "*.jsx",
      "*.mjs",
      "*.d.ts"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^@mo36924/(.+?)/(.*)$": "<rootDir>/packages/$1/src/$2",
      "^@mo36924/(.+)$": "<rootDir>/packages/$1/src"
    },
    "snapshotSerializers": [
      "@mo36924/jest-snapshot-serializer-graphql"
    ]
  },
  "dependencies": {
    "@mo36924/build": "0.0.13",
    "@mo36924/create-package": "^0.0.11"
  },
  "devDependencies": {
    "@types/babel__core": "^7.1.10",
    "@types/babel__preset-env": "^7.9.1",
    "@types/mysql": "^2.15.15",
    "@types/pluralize": "^0.0.29",
    "@types/prettier": "^2.1.2",
    "@types/sqlstring": "^2.2.1",
    "@typescript-eslint/parser": "^4.4.1",
    "del-cli": "^3.0.1",
    "eslint": "^7.11.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-react-hooks": "^4.1.2",
    "jest": "^26.5.3",
    "lerna": "^3.22.1",
    "mysql": "^2.18.1",
    "prettier": "^2.1.2",
    "ts-jest": "^26.4.1",
    "typescript": "^4.0.3"
  }
}
